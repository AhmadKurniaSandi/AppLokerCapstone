<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment">

    <ImageView
        android:id="@+id/iv_profile"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_120sdp"
        android:layout_marginTop="@dimen/_60sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_20ssp"
        app:layout_constraintEnd_toEndOf="@+id/iv_profile"
        app:layout_constraintStart_toStartOf="@+id/iv_profile"
        app:layout_constraintTop_toBottomOf="@+id/iv_profile"
        tools:text="Paijo" />

    <TextView
        android:id="@+id/tv_email_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintEnd_toEndOf="@+id/tv_profile"
        app:layout_constraintStart_toStartOf="@+id/tv_profile"
        app:layout_constraintTop_toBottomOf="@+id/tv_profile"
        tools:text="paijo@gmail.com" />

    <View
        android:id="@+id/view"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <TextView
        android:id="@+id/edit_profile"
        android:layout_width="0dp"
        android:layout_height="@dimen/_35sdp"
        android:drawablePadding="@dimen/_16sdp"
        android:gravity="center_vertical"
        android:text="@string/edit_profile"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        app:drawableStartCompat="@drawable/ic_baseline_person"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:drawableEndCompat="@drawable/ic_baseline_arrow_forward" />

    <View
        android:id="@+id/view2"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/edit_profile" />

    <TextView
        app:drawableEndCompat="@drawable/ic_baseline_arrow_forward"
        android:id="@+id/about_app"
        android:layout_width="0dp"
        android:layout_height="@dimen/_35sdp"
        android:drawablePadding="@dimen/_16sdp"
        android:gravity="center_vertical"
        android:text="@string/about_app"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        app:drawableStartCompat="@drawable/ic_baseline_about"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <View
        android:id="@+id/view3"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/about_app" />

    <TextView
        android:id="@+id/logout"
        android:layout_width="325dp"
        android:layout_height="@dimen/_35sdp"
        android:drawablePadding="@dimen/_16sdp"
        android:gravity="center_vertical"
        android:text="@string/logout"
        android:textColor="@color/red"
        android:textSize="@dimen/_16ssp"
        app:drawableStartCompat="@drawable/ic_baseline_logout"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/view3" />

    <View
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/logout" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="365dp" />
</androidx.constraintlayout.widget.ConstraintLayout>